                {
                  "type": "number"
                },
                {
                  "type": "string"
                }
              ]
            }
          }
        }
      ]
    },
    "simplePattern": {
      "type": "object",
      "additionalProperties": false,
      "if": {
        "properties": {
          "type": {
            "enum": ["object"]
          }
        }
      },
      "then": {
        "required": ["type", "properties"]
      },
      "else": {
        "required": ["type"],
        "propertyNames": {
          "not": {
            "enum": ["properties"]
          }
        }
      },
      "$ref": "#/definitions/simpleField"
    },
    "simpleParams": {
      "oneOf": [
        {
          "type": ["boolean", "integer", "number", "string", "null"]
        },
        {
          "type": "object",
          "properties": {
            "$repeat": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/simpleParams"
              }
            },
            "$table": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/simpleParams"
              }
            },
            "$evaluation": {
              "$ref": "#/definitions/jsonLogic"
            }
          },
          "patternProperties": {
            "^(.*)$": {
              "$ref": "#/definitions/simpleParams"
            }
          }
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/simpleParams"
          }
        }
      ]
    }
  },
  "properties": {
    "$params": {
      "type": "object",
      "patternProperties": {
        "^(.*)$": {
          "oneOf": [
            {
              "$ref": "#/definitions/simpleParams"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/simpleParams"
              }
            }
          ]
        }
      },
      "properties": {
        "$evalExcludes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "patternProperties": {
    "^[a-zA-Z_]+$": {
      "$ref": "#/definitions/simplePattern"
    }
  }
}
