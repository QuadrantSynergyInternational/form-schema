    "simpleLayout": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "TabLayout",
            "VerticalLayout",
            "HorizontalLayout",
            "FlexLayout",
            "Other"
          ]
        },
        "template": {
          "type": "string"
        },
        "$ref": {
          "type": "string"
