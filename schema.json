{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "json.eval.schema",
  "title": "JSON Schema",
  "type": "object",
  "definitions": {
    "jsonLogic": {
      "$ref": "https://raw.githubusercontent.com/QuadrantSynergyInternational/form-schema/refs/heads/main/logic.json"
    },
    "simpleTypes": {
      "enum": ["array", "boolean", "number", "object", "string"]
    },
    "logicOrRemoteOptions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "url": {
          "type": "string"
        },
        "path": {
          "type": "string",
          "description": "Data Path to get Data Array from API Response"
        },
        "labelPath": {
          "type": "string",
          "description": "Path to get List Label Value from API Response Array Item"
        },
        "valuePath": {
          "type": "string",
          "description": "Path to get List Value from API Response Array Item"
        },
        "method": {
          "type": "string",
          "enum": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
          "description": "API method to fetch"
        },
        "params": {
          "type": "object",
          "patternProperties": {
            "^(.*)$": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "number"
                },
                {
                  "type": "boolean"
                },
                {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "$evaluation": {
                      "$ref": "#/definitions/jsonLogic"
                    }
                  }
                }
              ]
            }
          }
        },
        "$evaluation": {
          "$ref": "#/definitions/jsonLogic"
        }
      }
    },
    "preDefinedOptions": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "required": ["label", "value"],
            "properties": {
              "label": {
                "type": "string"
              },
              "value": {
                "type": ["integer", "boolean", "number", "string"]
              }
            }
          },
          {
            "type": ["string", "boolean", "integer", "number"]
          }
        ]
      }
    },
    "simpleFieldTypes": {
      "enum": [
        "other",
        "section",
        "textinput",
        "textarea",
        "fileinput",
        "multiplefileinput",
        "toggleinput",
        "numberinput",
        "calendar",
        "datepicker",
        "daterangepicker",
        "datetimepicker",
        "select",
        "multipleselect",
        "options",
        "multipleoptions",
        "table",
        "custominput",
        "checkbox",
        "multiplecheckbox"
      ]
    },
