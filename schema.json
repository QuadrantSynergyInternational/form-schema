                "code": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                },
                "value": {
                  "oneOf": [
                    {
                      "type": "number"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "$evaluation": {
