                    }
                  }
                }
              ]
            }
          }
        },
        "dependents": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "$ref": {
                "type": "string"
              },
              "$condition": {
                "$ref": "#/definitions/jsonLogic"
              },
              "clear": {
                "type": "object",
                "properties": {
                  "$evaluation": {
                    "$ref": "#/definitions/jsonLogic"
                  }
                }
              },
              "value": {
                "type": "object",
                "properties": {
                  "$evaluation": {
                    "$ref": "#/definitions/jsonLogic"
                  }
                }
              }
            }
          }
        },
        "events": {
          "additionalProperties": false,
          "type": "object",
          "properties": {
            "changing": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "object",
                  "description": "$evaluation should return string or null",
                  "additionalProperties": false,
                  "properties": {
                    "$evaluation": {
                      "$ref": "#/definitions/jsonLogic"
                    }
                  }
                }
              ]
            },
            "changed": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "object",
