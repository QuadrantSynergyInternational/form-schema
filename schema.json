        "fieldTemplate": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "object",
              "additionalProperties": false,
              "description": "Should return string",
              "properties": {
                "$evaluation": {
                  "$ref": "#/definitions/jsonLogic"
                }
              }
            }
          ]
        },
        "options": {
          "oneOf": [
            { "$ref": "#/definitions/logicOrRemoteOptions" },
            { "$ref": "#/definitions/preDefinedOptions" }
          ]
        },
        "config": {
          "type": "object",
          "properties": {
            "all": {
              "type": "object",
              "patternProperties": {
                "^(.*)$": {
                  "oneOf": [
                    {
                      "type": "object",
                      "additionalProperties": true,
                      "properties": {
                        "$evaluation": {
                          "$ref": "#/definitions/jsonLogic"
                        }
                      }
                    },
                    {
                      "type": "array"
                    },
                    {
                      "type": "integer"
                    },
                    {
                      "type": "null"
                    },
                    {
                      "type": "number"
                    },
                    {
                      "type": "string"
                    }
                  ]
                }
              }
            },
            "mobile": {
              "type": "object"
            },
            "tablet": {
              "type": "object"
            },
            "desktop": {
              "type": "object"
            },
            "web": {
              "type": "object"
            },
            "backend": {
              "type": "object"
            }
          }
        },
        "properties": {
          "type": "object",
          "patternProperties": {
            "^(.*)$": {
              "$ref": "#/definitions/simplePattern"
            }
          }
        },
        "rules": {
          "$ref": "#/definitions/fieldRules"
        },
        "items": {
          "type": "object",
          "properties": {
            "$layout": {
              "$ref": "#/definitions/simpleLayout"
            },
            "properties": {
              "type": "object",
              "patternProperties": {
                "^[a-zA-Z_]+$": {
                  "$ref": "#/definitions/simplePattern"
                }
              }
            }
          }
        },
        "itemRules": {
          "$ref": "#/definitions/fieldRules"
        },
        "condition": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "hidden": {
              "oneOf": [
                {
                  "type": "boolean"
                },
                {
                  "type": "object",
                  "properties": {
                    "$evaluation": {
                      "$ref": "#/definitions/jsonLogic"
                    }
                  }
                }
              ]
