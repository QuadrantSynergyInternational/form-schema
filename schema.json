                "$evaluation": {
                  "$ref": "#/definitions/jsonLogic"
                }
              }
            }
          ]
        },
        "maxValue": {
          "oneOf": [
            {
              "type": "number"
            },
            {
              "type": "object",
              "properties": {
                "code": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                },
                "value": {
                  "oneOf": [
                    {
                      "type": "number"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "$evaluation": {
                          "$ref": "#/definitions/jsonLogic"
                        }
                      }
                    }
                  ]
                },
                "$evaluation": {
                  "$ref": "#/definitions/jsonLogic"
                }
              }
            }
          ]
        },
        "pattern": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "object",
              "properties": {
                "code": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                },
                "value": {
                  "oneOf": [
                    {
                      "type": "string"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "$evaluation": {
                          "$ref": "#/definitions/jsonLogic"
                        }
                      }
                    }
                  ]
                },
                "$evaluation": {
                  "$ref": "#/definitions/jsonLogic"
                }
              }
            }
          ]
        },
        "evaluation": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["code", "$evaluation"],
            "properties": {
              "code": {
                "type": "string"
              },
              "message": {
                "type": "string"
              },
              "data": {
                "type": "object",
                "patternProperties": {
                  "^(.*)$": {
                    "type": "object",
                    "properties": {
                      "$evaluation": {
                        "$ref": "#/definitions/jsonLogic"
                      }
                    }
                  }
                }
              },
              "value": {
                "type": "object",
                "properties": {
                  "$evaluation": {
                    "$ref": "#/definitions/jsonLogic"
                  }
                }
              },
              "$evaluation": {
                "$ref": "#/definitions/jsonLogic"
              }
            }
          },
          "minItems": 1
        }
      }
    },
    "simpleField": {
      "properties": {
        "type": {
          "oneOf": [
            {
              "$ref": "#/definitions/simpleTypes"
            },
            {
              "type": "object",
              "additionalProperties": false,
              "description": "Should return string",
              "properties": {
                "$evaluation": {
                  "$ref": "#/definitions/jsonLogic"
                }
              }
            }
          ]
        },
        "title": {
          "oneOf": [
            {
              "type": "string"
