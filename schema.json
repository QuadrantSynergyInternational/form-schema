        "hideLayout": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "all": {
              "$ref": "#/definitions/extendedboolean"
            },
            "mobile": {
              "$ref": "#/definitions/extendedboolean"
            },
            "tablet": {
              "$ref": "#/definitions/extendedboolean"
            },
            "desktop": {
              "$ref": "#/definitions/extendedboolean"
